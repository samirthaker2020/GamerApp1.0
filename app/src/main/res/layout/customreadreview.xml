<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/review_comment"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="4dp"
        android:maxLines="4"
        android:minLines="2"
        android:singleLine="false"
        android:text="TextView"
        android:textColor="@color/cardview_dark_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/readreview_ratingBar1" />

    <RatingBar
        android:id="@+id/readreview_ratingBar1"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="1dp"
        android:minHeight="10dip"
        android:numStars="5"
        android:rating="2"
        android:theme="@style/RatingBar"
        app:layout_constraintBottom_toTopOf="@+id/review_comment"
        app:layout_constraintStart_toEndOf="@+id/lbl_readreview_rating"
        app:layout_constraintTop_toBottomOf="@+id/review_date"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/review_by"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textColor="@color/cardview_dark_background"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/review_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/readreview_user_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lbl_readreview_rating"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="5dp"
        android:text="Ratings: 0.0/5"
        app:layout_constraintBottom_toTopOf="@+id/review_comment"
        app:layout_constraintEnd_toStartOf="@+id/readreview_ratingBar1"
        app:layout_constraintStart_toEndOf="@+id/readreview_user_image"
        app:layout_constraintTop_toBottomOf="@+id/review_date" />

    <TextView
        android:id="@+id/review_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="TextView"
        android:textColor="@color/cardview_dark_background"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/readreview_user_image"
        app:layout_constraintTop_toBottomOf="@+id/review_by" />

    <ImageView
        android:id="@+id/readreview_user_image"
        android:layout_width="71dp"
        android:layout_height="82dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/circle1"
        android:foreground="@drawable/circle1"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/lbl_readreview_rating"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.326" />
</androidx.constraintlayout.widget.ConstraintLayout>